<Window x:Class="_1ozisip_gadzhieva.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1ozisip_gadzhieva"
        mc:Ignorable="d"
        Title="Первое графическое приложение Гаджиевой З.А." Height="550" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <Frame Name="MainFrame" Grid.Row="1" HorizontalAlignment="Center" 
               Source="Pages/Str1.xaml" VerticalAlignment="Bottom">
        </Frame>
        <Button Content="Назад" Background="LightYellow" HorizontalAlignment="Left"
                Width="100" Height="40" Foreground="Orange" FontSize="26" 
                FontWeight="bold" FontFamily="Arial" Margin="0,2,0,3" Name="Back"
                ToolTip="Кликните для возврата на предыдущую страницу" Grid.Row="0" Click="Back_Click_1">
        </Button>
        <Button Content="Управление пользователями" HorizontalAlignment="Center" Click="Button_Click">
        </Button>
        <Label Content="Разработчик: 1озИСИП-2124, Гаджиева З.А." Grid.Row="2" FontWeight="bold" 
               FontFamily="Arial" FontSize="22" HorizontalAlignment="Center" Foreground="Orange"/>
        <Button Content="Бизнес-партнеры" Click="Button_Click_1"  HorizontalAlignment="Right" Margin="0,-5,0,5"></Button>

    </Grid>
</Window>
