<Page x:Class="_1ozisip_gadzhieva.Pages.Str1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_1ozisip_gadzhieva.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Content="Логин" Grid.Row="0" Grid.Column="1" FontSize="30" Foreground="DarkOrange"
               HorizontalAlignment="Right" VerticalAlignment="Center" FontFamily="arial"/>
        <Label Content="Пароль" Grid.Row="1" Grid.Column="1" FontSize="30" Foreground="DarkOrange"
               HorizontalAlignment="Right" VerticalAlignment="Center" FontFamily="arial"/>
        <TextBox Name="txtlog" Text="" FontSize="30" FontFamily="arial"
                 ToolTip="Введите логин" Height="50" Width="220" Grid.Row="0" Grid.Column="2" 
                 HorizontalAlignment="Center" Background="LightGray"></TextBox>
        <TextBlock Text="Логин или почта" Foreground="Gray" Name="txtHintLog" Height="50" 
                   Width="220" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" 
                   FontSize="22" FontFamily="arial"></TextBlock>
         <PasswordBox Name="Pass" Password="" FontSize="30" FontFamily="arial"
                 ToolTip="Введите логин" Height="50" Width="220" Grid.Row="1" Grid.Column="2" 
                 HorizontalAlignment="Center" Background="lightgray"></PasswordBox>
        <TextBlock Text="Пароль" Foreground="Gray" Name="hintPass" Height="50"
                   Width="220" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center"
                   FontSize="22" FontFamily="arial"></TextBlock>
        <Button Name="btnAuth" Content="Вход" FontSize="30" FontWeight="Bold" FontFamily="Arial"
                ToolTip="Нажмите для входа в систему" Height="50" Width="220" 
                Background="Orange" Foreground="Black" Grid.Row="2" Grid.ColumnSpan="2" Grid.Column="1" Margin="240,31,290,32" Click="btnAuth_Click"></Button>
        <Button Name="btnReg" Content="Регистрация" FontSize="30" FontWeight="Bold" FontFamily="Arial"
                ToolTip="Нажмите для регистрации" Height="50" Width="220" Background="Orange" 
                Foreground="Black" Grid.Row="3" Grid.ColumnSpan="3" Click="btnReg_Click"></Button>
    </Grid>
</Page>
