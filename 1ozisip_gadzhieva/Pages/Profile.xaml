<Page x:Class="_1ozisip_gadzhieva.Pages.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_1ozisip_gadzhieva.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Profile">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"></RowDefinition>
            <RowDefinition Height="50*"></RowDefinition>
            <RowDefinition Height="50*"></RowDefinition>
            <RowDefinition Height="50*"></RowDefinition>
            <RowDefinition Height="50*"></RowDefinition>
            <RowDefinition Height="50*"></RowDefinition>
            <RowDefinition Height="50*"></RowDefinition>
            <RowDefinition Height="50*"></RowDefinition>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Content="Редактирование профиля" Grid.Row="0" FontWeight="Bold" FontFamily="Arial" 
        FontSize="22" HorizontalAlignment="Center" Foreground="DarkGray" Grid.ColumnSpan="5"/>
        <Label Content="Email:" Grid.Row="1" Grid.Column="1" FontSize="12" Foreground="DarkGray"
         HorizontalAlignment="Right" FontFamily="Arial" />
        <Label Content="the.email@address.com" Grid.Row="1" Grid.Column="2" FontSize="12" Foreground="DarkGray"
 HorizontalAlignment="Left" FontFamily="Arial" />
        <Label Content="Имя:" Grid.Row="2" Grid.Column="1" FontSize="12" Foreground="DarkGray"
 HorizontalAlignment="Right" FontFamily="Arial" />
        <TextBox Name="txtName" Text="" FontSize="15" FontFamily="Arial"
     ToolTip="Имя" Width="150" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Center" />
        <TextBlock Text="Имя" Foreground="Gray" Name="txtNme" 
 Grid.Row="2" Grid.Column="2" HorizontalAlignment="Center" Width="150" TextAlignment="Center"
FontSize="15" FontFamily="arial"></TextBlock>
        <Label Content="Фамилия:" Grid.Row="3" Grid.Column="1" FontSize="12" Foreground="DarkGray"
 HorizontalAlignment="Right" FontFamily="Arial" />
        <Label Content="Пол:" Grid.Row="4" Grid.Column="1" FontSize="12" Foreground="DarkGray"
 HorizontalAlignment="Right" FontFamily="Arial" />
        <Label Content="Дата рождения:" Grid.Row="5" Grid.Column="1" FontSize="12" Foreground="DarkGray"
HorizontalAlignment="Right" FontFamily="Arial"/>
        <Label Content="Страна:" Grid.Row="6" Grid.Column="1" FontSize="12" Foreground="DarkGray"
HorizontalAlignment="Right" FontFamily="Arial"/>
        
        
        
        <Label Content="Фильтр по ролям:" Grid.Column="3" FontSize="12" Foreground="DarkGray"
        HorizontalAlignment="Center"  FontFamily="Arial" Width="186" Margin="0,42,0,0" Grid.RowSpan="2" />
        <Label Content="Сортировать по:" Grid.Row="1" Grid.Column="3" FontSize="12" Foreground="DarkGray"
        HorizontalAlignment="Center" FontFamily="Arial" Width="186" Margin="0,64,0,0" Grid.RowSpan="2" />
        <Label Content="Поиск:" Grid.Row="2" Grid.Column="3" FontSize="12" Foreground="DarkGray"
        HorizontalAlignment="Left" FontFamily="Arial" Width="108" Margin="0,65,0,24" Grid.RowSpan="2" />
        <TextBox Name="txtSearch" Text="" FontSize="15" FontFamily="Arial"
          ToolTip="Поиск" Width="150" Grid.Row="3" Grid.Column="4"
          HorizontalAlignment="Center" Background="Transparent" Margin="0,15,0,16" />
        <TextBlock Text="Поиск" Foreground="Gray" Name="txtHintLog" 
      Grid.Row="3" Grid.Column="4" HorizontalAlignment="Center" Margin="0,15,0,16"
     FontSize="15" FontFamily="arial"></TextBlock>
        <ComboBox Name="cmbSort" Grid.Row="2" Grid.Column="4" Margin="18,15,19,15">
            <ComboBoxItem>Имени</ComboBoxItem>
            <ComboBoxItem>Фамилии</ComboBoxItem>
        </ComboBox>
        <ComboBox Name="cmbRole" Grid.Row="1" Grid.Column="4" Margin="18,15,19,14">
            <ComboBoxItem>Все роли</ComboBoxItem>
            <ComboBoxItem>Администратор</ComboBoxItem>
            <ComboBoxItem>Пользователь</ComboBoxItem>
        </ComboBox>
        <Button Content="Обновить" HorizontalAlignment="Center" VerticalAlignment="Center" Height="35"
 Width="150" Foreground="Black" FontSize="12" FontWeight="Bold"
 FontFamily="Arial" Name="btnRenew" Grid.Column="4" Grid.Row="4"/>
        
    </Grid>
</Page>
